<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:layout_margin="0dp"
    android:orientation="vertical"
    tools:context="com.taot.wechat.MainActivity">

    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Hello World!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="3dp">

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textColor="@color/green"
            android:textSize="12sp"
            android:drawableTop="@drawable/icon_chat_solid"
            android:text="@string/wechat"/>

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textColor="@color/grey1"
            android:textSize="12sp"
            android:drawableTop="@drawable/icon_contacts_transparent"
            android:text="@string/contacts"/>

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textColor="@color/grey1"
            android:textSize="12sp"
            android:drawableTop="@drawable/icon_discover_transparent"
            android:text="@string/discover"/>

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textColor="@color/grey1"
            android:textSize="12sp"
            android:drawableTop="@drawable/icon_me_transparent"
            android:text="@string/me"/>

    </LinearLayout>

</LinearLayout>
